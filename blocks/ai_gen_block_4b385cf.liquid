{% doc %}
  @prompt
    Create me a testimonial section which goes with the theme of the website. It is neat, clean, it has star ratings, it has the ability to type a product, it has an ability to even add a video or image of the person, and just a very modern, nice design. Make sure it is made with best practices and all setting options to make edits  and ability to add multiple testimonials like a carousel 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonial-carousel-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonial-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-testimonial-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 40px;
  }

  .ai-testimonial-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-testimonial-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-testimonial-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-testimonial-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    gap: {{ block.settings.card_gap }}px;
    cursor: grab;
    user-select: none;
  }

  .ai-testimonial-track-{{ ai_gen_id }}:active {
    cursor: grabbing;
  }

  .ai-testimonial-slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.card_gap }}px * ({{ block.settings.slides_per_view }} - 1)) / {{ block.settings.slides_per_view }});
    min-width: 0;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity }});
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-testimonial-media-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 20px;
    border-radius: {{ block.settings.media_border_radius }}px;
    overflow: hidden;
  }

  .ai-testimonial-media-{{ ai_gen_id }} img,
  .ai-testimonial-media-{{ ai_gen_id }} video {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-testimonial-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 4px;
    margin-bottom: 16px;
  }

  .ai-testimonial-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: {{ block.settings.star_color }};
  }

  .ai-testimonial-star-empty-{{ ai_gen_id }} {
    fill: {{ block.settings.star_empty_color }};
  }

  .ai-testimonial-content-{{ ai_gen_id }} {
    flex-grow: 1;
    margin-bottom: 20px;
  }

  .ai-testimonial-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-testimonial-footer-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .ai-testimonial-avatar-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background-color: {{ block.settings.avatar_placeholder_bg }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-testimonial-avatar-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-avatar-placeholder-{{ ai_gen_id }} {
    width: 60%;
    height: 60%;
    fill: {{ block.settings.avatar_placeholder_color }};
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.name_color }};
    margin: 0 0 4px;
  }

  .ai-testimonial-role-{{ ai_gen_id }} {
    font-size: {{ block.settings.role_size }}px;
    color: {{ block.settings.role_color }};
    margin: 0;
  }

  .ai-testimonial-product-{{ ai_gen_id }} {
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid {{ block.settings.divider_color }};
  }

  .ai-testimonial-product-label-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.product_label_color }};
    margin: 0 0 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-testimonial-product-info-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-testimonial-product-image-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .ai-testimonial-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-product-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 500;
    color: {{ block.settings.product_title_color }};
    margin: 0;
  }

  .ai-testimonial-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 40px;
  }

  .ai-testimonial-nav-{{ ai_gen_id }} {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-testimonial-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_bg }};
  }

  .ai-testimonial-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-testimonial-nav-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    fill: {{ block.settings.nav_button_color }};
  }

  .ai-testimonial-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-testimonial-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: all 0.3s ease;
  }

  .ai-testimonial-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    width: 24px;
    border-radius: 5px;
  }

  @media screen and (max-width: 989px) {
    .ai-testimonial-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.card_gap }}px * ({{ block.settings.slides_per_view_tablet }} - 1)) / {{ block.settings.slides_per_view_tablet }});
    }

    .ai-testimonial-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-testimonial-slide-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }

    .ai-testimonial-carousel-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 0 {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }

    .ai-testimonial-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<testimonial-carousel-{{ ai_gen_id }} class="ai-testimonial-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonial-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-testimonial-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-testimonial-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-testimonial-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonial-carousel-wrapper-{{ ai_gen_id }}">
      <div class="ai-testimonial-track-{{ ai_gen_id }}" data-track>
        {% for i in (1..block.settings.testimonial_count) %}
          {% liquid
            assign testimonial_text_key = 'testimonial_text_' | append: i
            assign rating_key = 'rating_' | append: i
            assign customer_name_key = 'customer_name_' | append: i
            assign customer_role_key = 'customer_role_' | append: i
            assign customer_image_key = 'customer_image_' | append: i
            assign media_type_key = 'media_type_' | append: i
            assign testimonial_image_key = 'testimonial_image_' | append: i
            assign testimonial_video_key = 'testimonial_video_' | append: i
            assign product_key = 'product_' | append: i

            assign testimonial_text = block.settings[testimonial_text_key]
            assign rating = block.settings[rating_key]
            assign customer_name = block.settings[customer_name_key]
            assign customer_role = block.settings[customer_role_key]
            assign customer_image = block.settings[customer_image_key]
            assign media_type = block.settings[media_type_key]
            assign testimonial_image = block.settings[testimonial_image_key]
            assign testimonial_video = block.settings[testimonial_video_key]
            assign product = block.settings[product_key]
          %}

          <div class="ai-testimonial-slide-{{ ai_gen_id }}">
            <div class="ai-testimonial-card-{{ ai_gen_id }}">
              {% if media_type == 'image' and testimonial_image != blank %}
                <div class="ai-testimonial-media-{{ ai_gen_id }}">
                  <img
                    src="{{ testimonial_image | image_url: width: 800 }}"
                    alt="{{ customer_name | escape }}"
                    loading="lazy"
                    width="800"
                    height="auto"
                  >
                </div>
              {% elsif media_type == 'video' and testimonial_video != blank %}
                <div class="ai-testimonial-media-{{ ai_gen_id }}">
                  {{ testimonial_video | video_tag: autoplay: false, controls: true }}
                </div>
              {% endif %}

              {% if rating > 0 %}
                <div class="ai-testimonial-stars-{{ ai_gen_id }}">
                  {% for j in (1..5) %}
                    <svg class="ai-testimonial-star-{{ ai_gen_id }} {% if j > rating %}ai-testimonial-star-empty-{{ ai_gen_id }}{% endif %}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {% endfor %}
                </div>
              {% endif %}

              <div class="ai-testimonial-content-{{ ai_gen_id }}">
                {% if testimonial_text != blank %}
                  <p class="ai-testimonial-text-{{ ai_gen_id }}">{{ testimonial_text }}</p>
                {% endif %}
              </div>

              <div class="ai-testimonial-footer-{{ ai_gen_id }}">
                <div class="ai-testimonial-avatar-{{ ai_gen_id }}">
                  {% if customer_image != blank %}
                    <img
                      src="{{ customer_image | image_url: width: 200 }}"
                      alt="{{ customer_name | escape }}"
                      loading="lazy"
                      width="200"
                      height="200"
                    >
                  {% else %}
                    <svg class="ai-testimonial-avatar-placeholder-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                  {% endif %}
                </div>
                <div class="ai-testimonial-author-{{ ai_gen_id }}">
                  {% if customer_name != blank %}
                    <p class="ai-testimonial-name-{{ ai_gen_id }}">{{ customer_name }}</p>
                  {% endif %}
                  {% if customer_role != blank %}
                    <p class="ai-testimonial-role-{{ ai_gen_id }}">{{ customer_role }}</p>
                  {% endif %}
                </div>
              </div>

              {% if product != blank %}
                <div class="ai-testimonial-product-{{ ai_gen_id }}">
                  <p class="ai-testimonial-product-label-{{ ai_gen_id }}">Product reviewed</p>
                  <div class="ai-testimonial-product-info-{{ ai_gen_id }}">
                    {% if product.featured_image %}
                      <div class="ai-testimonial-product-image-{{ ai_gen_id }}">
                        <img
                          src="{{ product.featured_image | image_url: width: 100 }}"
                          alt="{{ product.title | escape }}"
                          loading="lazy"
                          width="100"
                          height="100"
                        >
                      </div>
                    {% endif %}
                    <p class="ai-testimonial-product-title-{{ ai_gen_id }}">{{ product.title }}</p>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    {% if block.settings.testimonial_count > block.settings.slides_per_view %}
      <div class="ai-testimonial-controls-{{ ai_gen_id }}">
        <button class="ai-testimonial-nav-{{ ai_gen_id }}" data-prev aria-label="Previous testimonial">
          <svg class="ai-testimonial-nav-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
          </svg>
        </button>
        <div class="ai-testimonial-dots-{{ ai_gen_id }}" data-dots></div>
        <button class="ai-testimonial-nav-{{ ai_gen_id }}" data-next aria-label="Next testimonial">
          <svg class="ai-testimonial-nav-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12z"/>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</testimonial-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.slidesPerView = {{ block.settings.slides_per_view }};
        this.slidesPerViewTablet = {{ block.settings.slides_per_view_tablet }};
        this.autoplay = {{ block.settings.autoplay }};
        this.autoplayDelay = {{ block.settings.autoplay_delay }} * 1000;
        this.autoplayTimer = null;
        
        // Touch/swipe variables
        this.touchStartX = 0;
        this.touchEndX = 0;
        this.isDragging = false;
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.slides = this.querySelectorAll('.ai-testimonial-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');

        if (!this.track || this.slides.length === 0) return;

        this.updateSlidesPerView();
        this.createDots();
        this.setupEventListeners();
        this.updateCarousel();

        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      updateSlidesPerView() {
        const width = window.innerWidth;
        if (width <= 749) {
          this.slidesPerView = 1;
        } else if (width <= 989) {
          this.slidesPerView = this.slidesPerViewTablet;
        } else {
          this.slidesPerView = {{ block.settings.slides_per_view }};
        }
      }

      createDots() {
        if (!this.dotsContainer) return;
        
        this.dotsContainer.innerHTML = '';
        const totalDots = Math.ceil(this.slides.length - this.slidesPerView + 1);
        
        for (let i = 0; i < totalDots; i++) {
          const dot = document.createElement('button');
          dot.classList.add('ai-testimonial-dot-{{ ai_gen_id }}');
          dot.setAttribute('aria-label', `Go to testimonial ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prev());
        }
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.next());
        }

        window.addEventListener('resize', () => {
          this.updateSlidesPerView();
          this.createDots();
          this.updateCarousel();
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplay) this.startAutoplay();
        });

        // Touch events for swipe
        this.track.addEventListener('touchstart', (e) => this.handleTouchStart(e), { passive: true });
        this.track.addEventListener('touchmove', (e) => this.handleTouchMove(e), { passive: false });
        this.track.addEventListener('touchend', () => this.handleTouchEnd());

        // Mouse drag events for desktop
        this.track.addEventListener('mousedown', (e) => this.handleMouseDown(e));
        this.track.addEventListener('mousemove', (e) => this.handleMouseMove(e));
        this.track.addEventListener('mouseup', () => this.handleMouseUp());
        this.track.addEventListener('mouseleave', () => this.handleMouseUp());
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateCarousel();
          this.resetAutoplay();
        }
      }

      next() {
        const maxIndex = this.slides.length - this.slidesPerView;
        if (this.currentIndex < maxIndex) {
          this.currentIndex++;
          this.updateCarousel();
          this.resetAutoplay();
        } else if (this.autoplay) {
          this.currentIndex = 0;
          this.updateCarousel();
          this.resetAutoplay();
        }
      }

      goToSlide(index) {
        this.currentIndex = index;
        this.updateCarousel();
        this.resetAutoplay();
      }

      updateCarousel() {
        const slideWidth = this.slides[0].offsetWidth;
        const gap = {{ block.settings.card_gap }};
        const offset = -(this.currentIndex * (slideWidth + gap));
        
        this.track.style.transform = `translateX(${offset}px)`;

        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }
        if (this.nextButton) {
          const maxIndex = this.slides.length - this.slidesPerView;
          this.nextButton.disabled = this.currentIndex >= maxIndex;
        }

        this.updateDots();
      }

      updateDots() {
        if (!this.dotsContainer) return;
        
        const dots = this.dotsContainer.querySelectorAll('.ai-testimonial-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        if (!this.autoplay) return;
        this.autoplayTimer = setInterval(() => this.next(), this.autoplayDelay);
      }

      stopAutoplay() {
        if (this.autoplayTimer) {
          clearInterval(this.autoplayTimer);
          this.autoplayTimer = null;
        }
      }

      resetAutoplay() {
        this.stopAutoplay();
        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      handleTouchStart(e) {
        this.touchStartX = e.touches[0].clientX;
        this.touchEndX = e.touches[0].clientX;
        this.isDragging = true;
      }

      handleTouchMove(e) {
        if (!this.isDragging) return;
        this.touchEndX = e.touches[0].clientX;
        
        // Prevent vertical scroll if horizontal swipe detected
        const diff = Math.abs(this.touchStartX - this.touchEndX);
        if (diff > 10) {
          e.preventDefault();
        }
      }

      handleTouchEnd() {
        if (!this.isDragging) return;
        this.isDragging = false;
        
        const swipeThreshold = 50;
        const diff = this.touchStartX - this.touchEndX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            // Swiped left - next slide
            this.next();
          } else {
            // Swiped right - previous slide
            this.prev();
          }
        }

        this.touchStartX = 0;
        this.touchEndX = 0;
      }

      handleMouseDown(e) {
        this.touchStartX = e.clientX;
        this.isDragging = true;
        this.track.style.cursor = 'grabbing';
        e.preventDefault();
      }

      handleMouseMove(e) {
        if (!this.isDragging) return;
        this.touchEndX = e.clientX;
      }

      handleMouseUp() {
        if (!this.isDragging) return;
        this.isDragging = false;
        this.track.style.cursor = 'grab';
        
        const swipeThreshold = 50;
        const diff = this.touchStartX - this.touchEndX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.next();
          } else {
            this.prev();
          }
        }

        this.touchStartX = 0;
        this.touchEndX = 0;
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('testimonial-carousel-{{ ai_gen_id }}', TestimonialCarousel{{ ai_gen_id }});
  })();
</script>

