{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-video-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}vh;
    overflow: hidden;
    display: flex;
    align-items: {{ block.settings.content_alignment_vertical }};
    justify-content: {{ block.settings.content_alignment_horizontal }};
  }

  .ai-hero-video__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-video__video-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
  }

  .ai-hero-video__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    z-index: 2;
  }

  .ai-hero-video__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    padding: 40px 20px;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-hero-video__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-hero-video__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    line-height: 1.5;
  }

  .ai-hero-video__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-hero-video__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-hero-video__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 4;
    display: flex;
    gap: 10px;
  }

  .ai-hero-video__control-button-{{ ai_gen_id }} {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: {{ block.settings.control_button_background }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    opacity: {{ block.settings.control_button_opacity }};
  }

  .ai-hero-video__control-button-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: scale(1.1);
  }

  .ai-hero-video__control-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    fill: {{ block.settings.control_button_icon_color }};
  }

  .ai-hero-video__fallback-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-hero-video__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-hero-video__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-video__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 2;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-video-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}vh;
    }

    .ai-hero-video__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-video__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.85 }}px;
    }

    .ai-hero-video__content-{{ ai_gen_id }} {
      padding: 20px 15px;
    }

    .ai-hero-video__controls-{{ ai_gen_id }} {
      bottom: 15px;
      right: 15px;
    }
  }
{% endstyle %}

<hero-video-{{ ai_gen_id }} class="ai-hero-video-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-video__background-{{ ai_gen_id }}">
    {% if block.settings.video_url != blank %}
      <video
        class="ai-hero-video__video-{{ ai_gen_id }}"
        {% if block.settings.autoplay %}autoplay{% endif %}
        {% if block.settings.loop %}loop{% endif %}
        {% if block.settings.muted %}muted{% endif %}
        playsinline
        {% if block.settings.fallback_image %}poster="{{ block.settings.fallback_image | image_url: width: 2000 }}"{% endif %}
      >
        <source src="{{ block.settings.video_url }}" type="video/mp4">
      </video>
    {% elsif block.settings.fallback_image %}
      <img
        src="{{ block.settings.fallback_image | image_url: width: 2000 }}"
        alt="{{ block.settings.fallback_image.alt | escape }}"
        class="ai-hero-video__fallback-{{ ai_gen_id }}"
        loading="eager"
      >
    {% else %}
      <div class="ai-hero-video__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-hero-video__empty-state-{{ ai_gen_id }}">
          Next, add a video URL or fallback image
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-hero-video__overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-video__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-video__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-video__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a
        href="{{ block.settings.button_link }}"
        class="ai-hero-video__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  {% if block.settings.show_controls and block.settings.video_url != blank %}
    <div class="ai-hero-video__controls-{{ ai_gen_id }}">
      <button
        class="ai-hero-video__control-button-{{ ai_gen_id }} ai-hero-video__play-pause-{{ ai_gen_id }}"
        aria-label="Play or pause video"
      >
        <svg class="ai-hero-video__pause-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <rect x="6" y="4" width="4" height="16"></rect>
          <rect x="14" y="4" width="4" height="16"></rect>
        </svg>
        <svg class="ai-hero-video__play-icon-{{ ai_gen_id }}" style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <polygon points="5 3 19 12 5 21 5 3"></polygon>
        </svg>
      </button>

      <button
        class="ai-hero-video__control-button-{{ ai_gen_id }} ai-hero-video__mute-{{ ai_gen_id }}"
        aria-label="Mute or unmute video"
      >
        <svg class="ai-hero-video__unmute-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
          <path d="M15.54 8.46a5 5 0 0 1 0 7.07"></path>
          <path d="M19.07 4.93a10 10 0 0 1 0 14.14"></path>
        </svg>
        <svg class="ai-hero-video__mute-icon-{{ ai_gen_id }}" style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
          <line x1="23" y1="9" x2="17" y2="15"></line>
          <line x1="17" y1="9" x2="23" y2="15"></line>
        </svg>
      </button>
    </div>
  {% endif %}
</hero-video-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroVideo{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.video = this.querySelector('.ai-hero-video__video-{{ ai_gen_id }}');
        this.playPauseButton = this.querySelector('.ai-hero-video__play-pause-{{ ai_gen_id }}');
        this.muteButton = this.querySelector('.ai-hero-video__mute-{{ ai_gen_id }}');
        this.playIcon = this.querySelector('.ai-hero-video__play-icon-{{ ai_gen_id }}');
        this.pauseIcon = this.querySelector('.ai-hero-video__pause-icon-{{ ai_gen_id }}');
        this.muteIcon = this.querySelector('.ai-hero-video__mute-icon-{{ ai_gen_id }}');
        this.unmuteIcon = this.querySelector('.ai-hero-video__unmute-icon-{{ ai_gen_id }}');

        if (!this.video) return;

        this.setupEventListeners();
      }

      setupEventListeners() {
        if (this.playPauseButton) {
          this.playPauseButton.addEventListener('click', () => {
            if (this.video.paused) {
              this.video.play();
              this.playIcon.style.display = 'none';
              this.pauseIcon.style.display = 'block';
            } else {
              this.video.pause();
              this.playIcon.style.display = 'block';
              this.pauseIcon.style.display = 'none';
            }
          });
        }

        if (this.muteButton) {
          this.muteButton.addEventListener('click', () => {
            this.video.muted = !this.video.muted;
            if (this.video.muted) {
              this.muteIcon.style.display = 'block';
              this.unmuteIcon.style.display = 'none';
            } else {
              this.muteIcon.style.display = 'none';
              this.unmuteIcon.style.display = 'block';
            }
          });
        }
      }
    }

    customElements.define('hero-video-{{ ai_gen_id }}', HeroVideo{{ ai_gen_id }});
  })();
</script>

