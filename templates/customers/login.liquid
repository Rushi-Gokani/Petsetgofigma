<div
  x-cloak
  x-data="{ resetPassword: $persist(false) }"
  class="container mx-auto flex h-full items-center px-5"
>
  <div class="mx-auto mb-16 w-[412px] max-w-full">
    <header class="flex items-center justify-between sm:text-center">
      <template x-if="!resetPassword">
        <h2 class="mb-7 w-full text-2xl">{{ 'customer.login_page.title' | t }}</h2>
      </template>
      <template x-if="resetPassword">
        <h2 class="mb-3 w-full text-2xl sm:mb-4">
          {{ 'customer.recover_password.title' | t }}
        </h2>
      </template>
    </header>

    <template x-if="!resetPassword">
      <div class="flex items-center justify-center">
        <div class="w-full">
          {%- form 'customer_login', novalidate: 'novalidate' -%}
            <div class="mt-3 flex flex-col">
              <label for="CustomerEmail" class="sr-only tracking-widest">
                {{ 'customer.login_page.email' | t }}
              </label>
              <input
                type="email"
                name="customer[email]"
                id="CustomerEmail"
                autocomplete="email"
                placeholder="{{ 'customer.login_page.email' | t }}"
                autocorrect="off"
                autocapitalize="off"
                class="input__field input__field--outline bg-bg-500 px-5 py-4 {% if form.errors contains 'form' %}border-error{% endif %}"
              >
            </div>
            {%- if form.errors contains 'form' -%}
              <span class="text-error"> {{ form.errors.messages.form }}. </span>
            {%- endif -%}

            {%- if form.password_needed -%}
              <div class="mt-3 flex flex-col">
                <label for="CustomerPassword" class="sr-only tracking-widest">
                  {{ 'customer.login_page.password' | t }}
                </label>

                <input
                  type="password"
                  value=""
                  name="customer[password]"
                  id="CustomerPassword"
                  placeholder="{{ 'customer.login_page.password' | t }}"
                  autocomplete="current-password"
                  class="input__field input__field--outline  bg-bg-500 px-5 py-4"
                >
              </div>

              <button
                type="button"
                @click="resetPassword = true"
                class="link link--primary mt-2 block text-sm tracking-widest"
              >
                {{ 'customer.login_page.forgot_password' | t }}
              </button>
            {%- endif -%}

            <button class="button button--filled-primary mt-7 w-full py-4 ">
              {{ 'customer.login_page.sign_in' | t }}
            </button>

            <div class="mt-6 text-center text-sm tracking-wider">
              <a
                x-element-transition-trigger
                href="{{ routes.account_register_url }}"
                class="link link--primary text-md"
              >
                {{ 'customer.login_page.create_account' | t }}
              </a>
            </div>
          {%- endform -%}
        </div>
      </div>
    </template>

    <template x-if="resetPassword">
      <div class="flex items-center justify-center">
        <div class="w-full">
          <p class="mb-7 text-md text-text-500 sm:text-center">
            {{ 'customer.recover_password.subtext' | t }}
          </p>

          {%- if recover_success == true -%}
            <p class="mb-3 text-center text-md text-text-500" tabindex="-1" autofocus>
              {% render 'icon-success', class: 'inline' %}
              {{ 'customer.recover_password.success' | t }}
            </p>
          {%- endif -%}

          {%- form 'recover_customer_password' -%}
            {% assign recover_success = form.posted_successfully? %}
            <div class="flex flex-col">
              <label for="RecoverEmail" class="sr-only tracking-widest"> </label>
              <input
                type="email"
                value=""
                name="email"
                id="RecoverEmail"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="{{ 'customer.login_page.email' | t }}"
                class="input__field input__field--outline bg-bg-500 px-5 py-4 {% if form.errors %} border-error {% endif %}"
              >
            </div>
            {%- if form.errors -%}
              <p class="text-md text-red-700">
                {{ form.errors.messages.form }}
              </p>
            {%- endif -%}

            <button class="button button--filled-primary my-7 w-full py-4 ">
              {{ 'customer.login_page.submit' | t }}
            </button>

            <button
              type="button"
              @click="resetPassword = false"
              class="w-full text-center text-md tracking-widest"
            >
              <span class="link link--primary">{{ 'customer.login_page.cancel' | t }}</span>
            </button>
          {%- endform -%}
        </div>
      </div>
    </template>

    {%- if shop.checkout.guest_login -%}
      <div>
        <h2 class="text-2xl">{{ 'customer.login_page.guest_title' | t }}</h2>
        {%- form 'guest_login' -%}
          <button class="button-primary inline-block border border-black px-5 py-2">
            {{ 'customer.login_page.guest_continue' | t }}
          </button>
        {%- endform -%}
      </div>
    {%- endif -%}
  </div>
</div>
