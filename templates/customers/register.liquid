<div class="container mx-auto flex h-full items-center px-5">
  <div class="mx-auto mb-16 w-[412px] max-w-full">
    <header class="flex items-center justify-between sm:text-center">
      <h2 class="mb-7 w-full text-2xl" tabindex="-1">{{ 'customer.register.title' | t }}</h2>
    </header>
    <div class="flex items-center">
      <div class="w-full">
        {%- form 'create_customer', novalidate: 'novalidate' -%}
          <div class="mt-3 flex flex-col">
            <label for="RegisterForm-FirstName" class="sr-only tracking-widest">
              {{ 'customer.register.first_name' | t }}
            </label>
            <input
              type="text"
              name="customer[first_name]"
              id="RegisterForm-FirstName"
              placeholder="{{ 'customer.register.first_name' | t }}"
              class="input__field input__field--outline bg-bg-500 px-5 py-4 {% if form.errors contains 'first_name' %}border-error{% endif %}"
              {% if form.first_name %}
                value="{{ form.first_name }}"
              {% endif %}
              autocomplete="given-name"
            >
          </div>
          {%- if form.errors contains 'first_name' -%}
            <span class="text-error">
              {{ form.errors.translated_fields.first_name | capitalize }}
              {{ form.errors.messages.first_name }}.
            </span>
          {%- endif -%}
          <div class="mt-3 flex flex-col">
            <label for="RegisterForm-LastName" class="sr-only tracking-widest">
              {{ 'customer.register.last_name' | t }}
            </label>
            <input
              type="text"
              name="customer[last_name]"
              id="RegisterForm-LastName"
              placeholder="{{ 'customer.register.last_name' | t }}"
              {% if form.last_name %}
                value="{{ form.last_name }}"
              {% endif %}
              autocomplete="family-name"
              class="input__field input__field--outline bg-bg-500 px-5 py-4 {% if form.errors contains 'last_name' %}border-error{% endif %}"
            >
          </div>
          {%- if form.errors contains 'last_name' -%}
            <span class="text-error">
              {{ form.errors.translated_fields.last_name | capitalize }}
              {{ form.errors.messages.last_name }}.
            </span>
          {%- endif -%}
          <div class="mt-3 flex flex-col">
            <label for="RegisterForm-email" class="sr-only tracking-widest">
              {{ 'customer.register.email' | t }}
            </label>
            <input
              type="email"
              name="customer[email]"
              id="RegisterForm-email"
              placeholder="{{ 'customer.register.email' | t }}"
              {% if form.email %}
                value="{{ form.email }}"
              {% endif %}
              spellcheck="false"
              autocapitalize="off"
              autocomplete="email"
              aria-required="true"
              class="input__field input__field--outline bg-bg-500 px-5 py-4 {% if form.errors contains 'email' %}border-error{% endif %}"
            >
          </div>
          {%- if form.errors contains 'email' -%}
            <span class="text-error">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}.
            </span>
          {%- endif -%}

          <div class="mt-3 flex flex-col">
            <label for="RegisterForm-password" class="sr-only tracking-widest">
              {{ 'customer.register.password' | t }}
            </label>
            <input
              type="password"
              name="customer[password]"
              id="RegisterForm-password"
              aria-required="true"
              placeholder="{{ 'customer.register.password' | t }}"
              class="input__field input__field--outline bg-bg-500 px-5 py-4 {% if form.errors contains 'password' %}border-error{% endif %}"
            >
          </div>
          {%- if form.errors contains 'password' -%}
            <span class="text-error">
              {{ form.errors.translated_fields.password | capitalize }}
              {{ form.errors.messages.password }}.
            </span>
          {%- endif -%}

          <button class="button button--filled-primary mt-7 w-full py-4 ">
            {{ 'customer.register.submit' | t }}
          </button>

          <div class="mt-6 text-center text-sm tracking-wider">
            <a
              x-element-transition-trigger
              href="{{ routes.account_login_url }}"
              class="link link--primary text-md"
            >
              {{ 'customer.register.back' | t }}
            </a>
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>
