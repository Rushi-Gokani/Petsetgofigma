{% comment %}
  Size Chart Modal - Works on both mobile and desktop
{% endcomment %}

<div
  x-data="{ isOpen: false }"
  x-on:open-size-chart.window="isOpen = true"
  x-on:keydown.escape.window="isOpen = false"
  x-init="$watch('isOpen', value => {
    if (value) {
      document.body.classList.add('size-chart-modal-open');
    } else {
      document.body.classList.remove('size-chart-modal-open');
    }
  })"
>
  <!-- Modal Overlay -->
  <div
    x-show="isOpen"
    x-cloak
    @click.self="isOpen = false"
    class="size-chart-modal-overlay"
  >
    <!-- Modal Content -->
    <div
      @click.stop
      class="size-chart-modal-content"
    >
      <!-- Modal Header -->
      <div class="size-chart-modal-header">
        <h2 class="size-chart-modal-title">Size Chart</h2>
        <button
          type="button"
          @click.prevent.stop="isOpen = false"
          class="size-chart-modal-close"
          aria-label="Close"
        >
          <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Modal Body -->
      <div class="size-chart-modal-body">
        <!-- Size Guide Table -->
        <div style="margin-bottom: 2rem;">
          <table class="size-chart-table">
            <thead>
              <tr>
                <th>Size</th>
                <th>Chest (in)</th>
                <th>Length (in)</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>XS</td>
                <td>32-34</td>
                <td>26-27</td>
              </tr>
              <tr>
                <td>S</td>
                <td>35-37</td>
                <td>28-29</td>
              </tr>
              <tr>
                <td>M</td>
                <td>38-40</td>
                <td>30-31</td>
              </tr>
              <tr>
                <td>L</td>
                <td>41-43</td>
                <td>32-33</td>
              </tr>
              <tr>
                <td>XL</td>
                <td>44-46</td>
                <td>34-35</td>
              </tr>
              <tr>
                <td>XXL</td>
                <td>47-49</td>
                <td>36-37</td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- How to Measure -->
        <div style="margin-bottom: 2rem;">
          <h3 style="font-weight: 600; font-size: 1.125rem; margin-bottom: 1rem; color: var(--color-text-700, #374151);">How to Measure</h3>
          <div style="font-size: 0.875rem; color: var(--color-text-600, #6b7280);">
            <div style="margin-bottom: 0.75rem;">
              <strong>Chest:</strong> Measure around the fullest part of your chest, keeping the tape measure horizontal.
            </div>
            <div>
              <strong>Length:</strong> Measure from the highest point of your shoulder down to your desired length.
            </div>
          </div>
        </div>

        <!-- Fit Tips -->
        <div style="background-color: var(--color-background-300, #f9fafb); border-radius: 0.5rem; padding: 1.25rem;">
          <h3 style="font-weight: 600; font-size: 1.125rem; margin-bottom: 0.75rem; color: var(--color-text-700, #374151);">Fit Tips</h3>
          <ul style="font-size: 0.875rem; color: var(--color-text-600, #6b7280); list-style: none; padding: 0; margin: 0;">
            <li style="margin-bottom: 0.5rem;">• For a relaxed fit, choose your regular size</li>
            <li style="margin-bottom: 0.5rem;">• For a slim fit, size down</li>
            <li>• If you're between sizes, we recommend sizing up</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>