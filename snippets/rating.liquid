{% comment %}
  Renders a 5 stars rating

  Accepts:
    class: string,
    rating_value: number,
    rating_max: number,
{% endcomment %}

<div
  class="{{ class }}"
>
  <span class="sr-only tracking-widest">
    {{- 'accessibility.star_reviews_info' | t: rating_value: rating_value, rating_max: rating_max -}}
  </span>
  {% for i in (1..rating_max) %}
    {%- assign half = i | minus: 0.5 -%}
    {% if i <= rating_value %}
      {% render 'icon-star-full' %}
    {% elsif half <= rating_value %}
      {% render 'icon-star-half' %}
    {% else %}
      {% render 'icon-star-empty' %}
    {% endif %}
  {% endfor %}
</div>
