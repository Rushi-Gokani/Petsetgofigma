{% comment %}
  Pickup availability list

  Accepts:
  - pick_up_availabilities: {Object} Product pick up availabilities
{% endcomment %}

{% comment %} Pickup list {% endcomment %}
<ul class="mt-3" role="list">
  {%- for availability in pick_up_availabilities -%}
    <li class="mb-4 border-text-50 pb-4  [&:not(:last-of-type)]:border-b">
      <h4 class="mb-2">{{ availability.location.name | escape }}</h4>
      <p class="mb-4 mt-2 ">
        {%- if availability.available -%}
          <span class="mb-1 inline-block text-green-700">
            {% render 'icon-tick' %}
          </span>
          {{ 'products.product.pickup_availability.pick_up_available' | t }},
          {{ availability.pick_up_time | downcase }}
        {%- else -%}
          {% render 'icon-unavailable', class: 'mb-1 text-red-600' %}
          {{ 'products.product.pickup_availability.pick_up_unavailable' | t }}
        {%- endif -%}
      </p>
      <div class="">
        {%- assign address = availability.location.address -%}
        {{ address | format_address }}
        {%- if address.phone.size > 0 -%}
          <p>{{ address.phone }}</p>
        {%- endif -%}
      </div>
    </li>
  {%- endfor -%}
</ul>
