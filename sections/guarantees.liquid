{% unless section.blocks == empty %}
  {% liquid
    assign top_padding = section.settings.padding_top | round: 0
    assign bottom_padding = section.settings.padding_bottom | round: 0
  %}

  <div class="{% if section.settings.custom_color_scheme %}color-{{ section.settings.color_scheme }} bg-bg-500{% endif %}">
    <div
      class="content-wrapper relative m-auto flex justify-around gap-8 md:flex-wrap md:gap-14 max-md:overflow-x-auto"
      style="padding-top: {{ top_padding }}px; padding-bottom: {{ bottom_padding }}px"
    >
      {% for block in section.blocks %}
        <div class="flex w-[160px] flex-shrink-0 flex-col items-center justify-start gap-7 md:w-[calc((100%-3*3.5rem)/4)]">
          {% if block.settings.icon != blank %}
            <div class="w-fit rounded-xl border border-primary-50 p-3 ">
              {%- assign alt = block.settings.icon.alt | default: block.settings.heading -%}
              {% render 'image', src: block.settings.icon, width: '20px', height: '20px', alt: alt %}
            </div>
          {% endif %}
          <div class="flex flex-col gap-4 text-center">
            {% if block.settings.heading != blank %}
              <h3 class="whitespace-nowrap text-lg text-text-500">{{ block.settings.heading }}</h3>
            {% endif %}
            {% if block.settings.content != blank %}
              <p>{{ block.settings.content }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endunless %}

{% schema %}
{
  "name": "t:sections.guarantees.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.colors.header"
    },
    {
      "type": "checkbox",
      "id": "custom_color_scheme",
      "default": false,
      "label": "t:sections.all.custom_color_scheme.label",
      "info": "t:sections.all.custom_color_scheme.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.guarantees.blocks.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "t:sections.guarantees.blocks.settings.icon.label",
          "info": "t:sections.guarantees.blocks.settings.icon.info"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.guarantees.blocks.settings.heading.label"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "t:sections.guarantees.blocks.settings.content.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.guarantees.presets.name",
      "settings": {
        "padding_top": 36,
        "padding_bottom": 36
      },
      "blocks": [
        {
          "type": "column",
          "settings": {
            "heading": "Return Policy",
            "content": "You can return and try on your order during 90-days after receiving"
          }
        },
        {
          "type": "column",
          "settings": {
            "heading": "Worldwide Delivery",
            "content": "Fast and secure delivery options with tracking without import duties"
          }
        },
        {
          "type": "column",
          "settings": {
            "heading": "Sustainability",
            "content": "Shipping boxes and packaging are fully recyclable and biodegradable"
          }
        },
        {
          "type": "column",
          "settings": {
            "heading": "Authorized Retailer",
            "content": "Authorised retailer for all the brands we carry"
          }
        }
      ]
    }
  ]
}
{% endschema %}
