<div
  id="shop-category-{{ section.id }}"
  class="shop-category-section color-{{ section.settings.color_scheme }} gradient"
>
  <div class="shop-category__inner">
    <div class="shop-category__header">
      <h2 class="shop-category__title">
        {{ section.settings.title_before | escape }}
        <span class="shop-category__title-accent">{{ section.settings.title_accent | escape }}</span>
        {{ section.settings.title_after | escape }}
      </h2>
      {% if section.settings.subtitle != blank %}
        <p class="shop-category__subtitle">{{ section.settings.subtitle | escape }}</p>
      {% endif %}
      <div class="shop-category__nav">
        <button
          class="shop-category__nav-btn shop-category__nav-btn--ghost"
          type="button"
          aria-label="Previous categories"
          data-prev
        >
          <span aria-hidden="true">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 5L8 12L15 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </button>
        <button
          class="shop-category__nav-btn shop-category__nav-btn--primary"
          type="button"
          aria-label="Next categories"
          data-next
        >
          <span aria-hidden="true">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 5L16 12L9 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </button>
      </div>
    </div>

    <div class="shop-category__slider" data-section-id="{{ section.id }}">
      <div class="shop-category__track" data-track>
        {% for block in section.blocks %}
          <div class="shop-category__card" {{ block.shopify_attributes }}>
            <div class="shop-category__image">
              {% if block.settings.image != blank %}
                {% render 'image',
                  src: block.settings.image,
                  alt: block.settings.image.alt | default: block.settings.title,
                  img_class: 'shop-category__img',
                  widths: '360, 540, 720, 900',
                  sizes: '(min-width: 1200px) 480px, (min-width: 768px) 50vw, 90vw'
                %}
              {% elsif block.settings.collection != blank and block.settings.collection.image != blank %}
                {% render 'image',
                  src: block.settings.collection.image,
                  alt: block.settings.collection.image.alt | default: block.settings.title | default: block.settings.collection.title,
                  img_class: 'shop-category__img',
                  widths: '360, 540, 720, 900',
                  sizes: '(min-width: 1200px) 480px, (min-width: 768px) 50vw, 90vw'
                %}
              {% else %}
                <div class="shop-category__placeholder">
                  {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </div>
            <div class="shop-category__overlay"></div>
            <div class="shop-category__content">
              {% if block.settings.title != blank %}
                <p class="shop-category__label">{{ block.settings.title | escape }}</p>
              {% endif %}
              <span class="shop-category__arrow" aria-hidden="true">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 16L16 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M9 8H16V15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
            {% if block.settings.link != blank %}
              <a
                class="shop-category__link"
                href="{{ block.settings.link }}"
                aria-label="{{ block.settings.title | default: 'Category link' | escape }}"
              ></a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  #shop-category-{{ section.id }} {
    --shop-category-accent: {{ section.settings.accent_color }};
    --shop-category-text: var(--color-foreground, #121212);
    --shop-category-muted: #5f6368;
    --shop-category-card-radius: 20px;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  #shop-category-{{ section.id }} .shop-category__inner {
    max-width: 1200px;
    margin: 0 auto;
    {% comment %} padding: 0 18px; {% endcomment %}
    display: grid;
    grid-template-columns: minmax(260px, 320px) 1fr;
    gap: 20px;
    align-items: center;
  }

  #shop-category-{{ section.id }} .shop-category__header {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  #shop-category-{{ section.id }} .shop-category__title {
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.1;
    font-weight: 800;
    color: var(--shop-category-text);
    margin: 0;
  }

  #shop-category-{{ section.id }} .shop-category__title-accent {
    color: var(--shop-category-accent);
  }

  #shop-category-{{ section.id }} .shop-category__subtitle {
    margin: 0;
    color: var(--shop-category-muted);
    font-size: 14px;
    line-height: 1.5;
    max-width: 240px;
  }

  #shop-category-{{ section.id }} .shop-category__nav {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  #shop-category-{{ section.id }} .shop-category__nav-btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid #d7d9dc;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.18s ease;
  }

  #shop-category-{{ section.id }} .shop-category__nav-btn--ghost {
    background: #ffffff;
    color: #4b4f55;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.06);
  }

  #shop-category-{{ section.id }} .shop-category__nav-btn--ghost:hover {
    border-color: #c2c6cc;
  }

  #shop-category-{{ section.id }} .shop-category__nav-btn--primary {
    background: var(--shop-category-accent);
    color: #ffffff;
    border-color: var(--shop-category-accent);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.12);
  }

  #shop-category-{{ section.id }} .shop-category__nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
    box-shadow: none;
  }

  #shop-category-{{ section.id }} .shop-category__slider {
    width: 100%;
  }

  #shop-category-{{ section.id }} .shop-category__track {
    display: flex;
    gap: 16px;
    overflow: hidden;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;
    padding: 6px;
  }

  #shop-category-{{ section.id }} .shop-category__card {
    position: relative;
    flex: 0 0 calc(50% - 8px);
    min-height: 230px;
    border-radius: var(--shop-category-card-radius);
    overflow: hidden;
    scroll-snap-align: start;
  }

  #shop-category-{{ section.id }} .shop-category__image,
  #shop-category-{{ section.id }} .shop-category__img,
  #shop-category-{{ section.id }} .shop-category__placeholder {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #shop-category-{{ section.id }} .shop-category__placeholder {
    background: linear-gradient(135deg, #f5f7fa, #e4ebf5);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shop-category-{{ section.id }} .shop-category__img {
    border-radius: var(--shop-category-card-radius);
  }

  #shop-category-{{ section.id }} .shop-category__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.65) 0%, rgba(0, 0, 0, 0.12) 55%, rgba(0, 0, 0, 0) 100%);
    pointer-events: none;
  }

  #shop-category-{{ section.id }} .shop-category__content {
    position: absolute;
    inset: 16px 16px 16px 16px;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 12px;
    color: #ffffff;
  }

  #shop-category-{{ section.id }} .shop-category__label {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #ffffff;
  }

  #shop-category-{{ section.id }} .shop-category__arrow {
    display: inline-flex;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.16);
    color: #ffffff;
    backdrop-filter: blur(3px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  #shop-category-{{ section.id }} .shop-category__link {
    position: absolute;
    inset: 0;
    z-index: 2;
  }

  @media (max-width: 1024px) {
    #shop-category-{{ section.id }} .shop-category__inner {
      grid-template-columns: 1fr;
      gap: 18px;
    }

    #shop-category-{{ section.id }} .shop-category__header {
      order: -1;
    }

    #shop-category-{{ section.id }} .shop-category__track {
      overflow-x: auto;
      padding-bottom: 4px;
    }

    #shop-category-{{ section.id }} .shop-category__card {
      flex: 0 0 80%;
      min-width: 260px;
    }

    #shop-category-{{ section.id }} .shop-category__subtitle {
      max-width: none;
    }
  }

  @media (max-width: 640px) {
    #shop-category-{{ section.id }} .shop-category__title {
      font-size: {{ section.settings.heading_size }}px;
    }

    #shop-category-{{ section.id }} .shop-category__nav {
      gap: 8px;
    }

    #shop-category-{{ section.id }} .shop-category__card {
      flex: 0 0 90%;
    }
  }
</style>

<script>
  (() => {
    const root = document.getElementById('shop-category-{{ section.id }}');
    if (!root) return;

    const track = root.querySelector('[data-track]');
    const prev = root.querySelector('[data-prev]');
    const next = root.querySelector('[data-next]');
    const cards = root.querySelectorAll('.shop-category__card');

    if (!track || !prev || !next || !cards.length) return;

    const getScrollAmount = () => {
      const firstCard = cards[0];
      return firstCard ? firstCard.getBoundingClientRect().width + 16 : track.clientWidth;
    };

    const updateButtons = () => {
      const maxScroll = track.scrollWidth - track.clientWidth;
      prev.disabled = track.scrollLeft <= 0;
      next.disabled = track.scrollLeft >= maxScroll - 1;
    };

    prev.addEventListener('click', () => {
      track.scrollBy({ left: -getScrollAmount(), behavior: 'smooth' });
      setTimeout(updateButtons, 200);
    });

    next.addEventListener('click', () => {
      track.scrollBy({ left: getScrollAmount(), behavior: 'smooth' });
      setTimeout(updateButtons, 200);
    });

    track.addEventListener('scroll', updateButtons, { passive: true });
    window.addEventListener('resize', updateButtons);

    updateButtons();
  })();
</script>

{% schema %}
{
  "name": "Shop by category",
  "settings": [
    {
      "type": "text",
      "id": "title_before",
      "label": "Heading (first part)",
      "default": "Shop"
