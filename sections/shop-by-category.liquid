      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Heading size",
      "default": 34
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Explore our curated collections designed for your furry friend's happiness."
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#f7a600"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection (for default image)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Pet Clothing"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by category",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Pet Cloths"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Pet Bedding"
          }
        }
      ]
    }
  ]
}
{% endschema %}
