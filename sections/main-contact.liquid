<div class="{% if section.settings.custom_color_scheme %}color-{{ section.settings.color_scheme }} bg-bg-500{% endif %}">
  <div
    class="content-wrapper mx-auto"
    style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
  >
    <h1 class="mb-7 text-center text-2xl font-semibold text-primary-500 md:mb-8">
      {{ section.settings.contact_title }}
    </h1>

    <div
      class="flex gap-y-7 max-md:flex-col {% unless section.settings.two_columns %}flex-col w-[720px] max-w-full mx-auto{% endunless %}"
    >
      <div class="flex-1 rounded-md px-5 py-7 md:p-12" style="background-color: {{ section.settings.bg_color }};">
        <div class="leading-7">
          <h2
            style="--title-color: {{ section.settings.title_color }}"
            class="mb-5 text-lg font-semibold text-[--title-color]"
          >
            {{ page.title | escape }}
          </h2>
          <div class="rte">
            {{ page.content }}
          </div>
        </div>
      </div>

      <div class="flex-1">
        <div class="{% if section.settings.two_columns %}md:px-12{% endif %}">
          {% render 'contact-form' %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "contact_title",
      "label": "t:sections.contact-form.settings.contact_title.label",
      "default": "Get in Touch"
    },
    {
      "type": "checkbox",
      "id": "two_columns",
      "label": "t:sections.contact-form.settings.two_columns.label",
      "default": true,
      "info": "t:sections.contact-form.settings.two_columns.info"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "t:sections.contact-form.settings.page_content_bg_color.label",
      "default": "#F5F5F5",
      "info": "t:sections.contact-form.settings.page_content_bg_color.info"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "t:sections.contact-form.settings.page_content_title_color.label",
      "default": "#181818",
      "info": "t:sections.contact-form.settings.page_content_title_color.info"
    },
    {
      "type": "paragraph",
      "content": "t:sections.contact-form.settings.paragraph.content"
    },
    {
      "type": "header",
      "content": "t:sections.all.colors.header"
    },
    {
      "type": "checkbox",
      "id": "custom_color_scheme",
      "default": false,
      "label": "t:sections.all.custom_color_scheme.label",
      "info": "t:sections.all.custom_color_scheme.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 48
    }
  ]
}
{% endschema %}
